@model WebProgrammingHomework.Models.Message
@{
	ViewData["Title"] = "İletişim";
}

<section class="page-section" id="contact">
	<div class="container">
		<div class="text-center">
			<h2 class="section-heading text-uppercase">Bizimle iletişime Geçin</h2>
		</div>

		<form id="contactForm" asp-controller="ContactController" asp-action="Index" method="post">
			<div class="row align-items-stretch mb-5">
				<div class="col-md-6">
					<div class="form-group">
						<!-- Name input-->
						<input asp-for="SenderName" class="form-control" placeholder="Adınızı giriniz" />
						<span asp-validation-for="SenderName" class="text-danger"></span>
					</div>
					<div class="form-group">
						<!-- Name input-->
						<input asp-for="SenderSurname" class="form-control" placeholder="Soyadınızı giriniz" />
						<span asp-validation-for="SenderSurname" class="text-danger"></span>
					</div>
					<div class="form-group">
						<!-- Email address input-->
						<input asp-for="SenderEmail" class="form-control" placeholder="E-Posta adresinizi giriniz" />
						<span asp-validation-for="SenderEmail" class="text-danger"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group form-group-textarea mb-md-0">
						<!-- Message input-->
						<textarea asp-for="message" class="form-control" placeholder="Mesajınızı yazınız"></textarea>
						<span asp-validation-for="message" class="text-danger"></span>
					</div>
				</div>
			</div>

			@if (ViewBag.Warning != null)
			{
				<div class="text-center text-white mb-3">
					<div class="fw-bolder">@TempData["Warning"]</div>
				</div>
			}

			<!-- Submit Button-->
			<div class="text-center"><input class="btn btn-primary btn-xl text-uppercase" id="submitButton" type="submit" value="Gönder" /></div>
		</form>
	</div>
</section>