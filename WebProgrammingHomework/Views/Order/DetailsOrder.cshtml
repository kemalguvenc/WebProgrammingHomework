@model IEnumerable<Order>
@{
	ViewData["Title"] = "Sipariş Bilgisi";
}

<h3>Sipariş Bilgisi</h3>

<table style="width:100%;">
	<thead>
		<tr style="border-bottom: 3px solid #000;">
			<th>@Html.DisplayNameFor(model => model.Buyer.Name)</th>
			<th>@Html.DisplayNameFor(model => model.Buyer.Adress)</th>
			<th>@Html.DisplayNameFor(model => model.ShoppingDate)</th>
			<th>@Html.DisplayNameFor(model => model.Products[0].Name)</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr style="border-bottom: 1px solid #ddd;">
				<td>@Html.DisplayFor(modelItem => item.Buyer.Name)</td>
				<td>@Html.DisplayFor(modelItem => item.ShoppingDate)</td>
				<td>
					@Html.ActionLink("Geriye", "DetailStudent", "Student", new{id=item.Id})
					@Html.ActionLink("Update", "UpdateStudent", "Student", new{id=item.Id})
					@Html.ActionLink("Delete", "DeleteStudent", "Student", new{id=item.Id})
				</td>
			</tr>
		}
	</tbody>
</table>