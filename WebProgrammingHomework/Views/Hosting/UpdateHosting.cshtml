@model WebProgrammingHomework.Models.Hosting
@{
	ViewData["Title"] = "Hosting Güncelleme";
}

<section class="page-section" id="contact">
	<div class="container">
		<div class="text-center">
			<h2 class="section-heading text-uppercase">Hosting Güncelleme</h2>
		</div>

		<form id="contactForm" asp-controller="HostingController" asp-action="UpdateHosting" method="post">
			<div class="row align-items-stretch mb-5">
				<div class="col-md-6">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<input type="hidden" asp-for="Id" />
					<div class="form-group">
						<!-- Name input-->
						<input asp-for="Name" class="form-control" placeholder="Ürün adını giriniz" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div class="form-group">
						<!-- Disk input-->
						<input asp-for="Disk" class="form-control" placeholder="Disk miktarını giriniz" />
						<span asp-validation-for="Disk" class="text-danger"></span>
					</div><div class="form-group">
						<!-- Traffic input-->
						<input asp-for="Traffic" class="form-control" placeholder="Trafik miktarını giriniz" />
						<span asp-validation-for="Traffic" class="text-danger"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<!-- WebAdressNumber input-->
						<input asp-for="WebAdressNumber" class="form-control" placeholder="Web adres adedini giriniz" />
						<span asp-validation-for="WebAdressNumber" class="text-danger"></span>
					</div>
					<div class="form-group">
						<!-- HostingPanel input-->
						<select asp-for="hostingPanel" asp-items="Html.GetEnumSelectList<HostingPanel>()" class="form-control"></select>
						<span asp-validation-for="hostingPanel" class="text-danger"></span>
					</div>
					<div class="form-group">
						<!-- Price input-->
						<input asp-for="Price" class="form-control" placeholder="Fiyatı giriniz" />
						<span asp-validation-for="Price" class="text-danger"></span>
					</div>
				</div>
			</div>

			@if (TempData["Warning"] != null)
			{
				<div class="text-center text-white mb-3">
					<div class="fw-bolder">TempData.["Warning"]</div>
				</div>
			}

			<!-- Submit Button-->
			<div class="text-center"><input class="btn btn-primary btn-xl text-uppercase" id="submitButton" type="submit" value="Güncelle" /></div>
		</form>
	</div>
</section>